#include "sun8i-h3-nanopi.dtsi"
#include <dt-bindings/pwm/pwm.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "FriendlyARM NanoPi NEO";
	compatible = "friendlyarm,nanopi-neo", "allwinner,sun8i-h3";

	chosen {
		/delete-node/ framebuffer@0;
	};

	leds {
		compatible = "gpio-leds";

		status {
			label = "nanopi:blue:status";
			gpios = <&pio 0 10 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
		};

		pwr {
			label = "nanopi:green:pwr";
			gpios = <&r_pio 0 10 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "timer";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		autorepeat;

		switch@1 {
			label = "key1";
			linux,code = <101>;
			interrupt-parent = <&pio>;
			interrupts = <0 2 IRQ_TYPE_EDGE_BOTH>;//PA2
		};

		switch@2 {
			label = "key2";
			linux,code = <102>;
			interrupt-parent = <&pio>;
			interrupts = <0 3 IRQ_TYPE_EDGE_BOTH>;//PA3
		};

		switch@3 {
			label = "key3";
			linux,code = <103>;
			interrupt-parent = <&pio>;
			interrupts = <0 0 IRQ_TYPE_EDGE_BOTH>;//PA0
		};
	};

	backlight: backlight {
/*
		compatible = "pwm-backlight";
		pwms = <&pwm 0 50000 PWM_POLARITY_INVERTED>;
		enable-gpios = <&pio 6 9 GPIO_ACTIVE_HIGH>;

		brightness-levels = <0 1 2 4 8 16 32 64 128 255>;
		default-brightness-level = <9>;
*/
		compatible = "gpio-backlight";
		gpios = <&pio 6 9 GPIO_ACTIVE_HIGH>;
		default-on;
		status = "okay";
	};
};

&ehci0 {
	status = "okay";
};
/*
&ehci1 {
	status = "okay";
};

&ehci2 {
	status = "okay";
};

&ehci3 {
	status = "okay";
};
*/
&spi0 {
    pinctrl-names = "default";
    pinctrl-0 = <&spi0_pins>;
    status = "okay";

	ili9341@0 {
		compatible = "ilitek,ili9341";
		reg = <0>;
		status = "okay";
		spi-max-frequency = <50000000>;
		rotate = <270>;
		bgr;
		fps = <30>;
		buswidth = <8>;
		reset-gpios = <&pio 6 8 GPIO_ACTIVE_LOW>; //PG8
		dc-gpios = <&pio 0 1 GPIO_ACTIVE_HIGH>;//PA1
		debug = <0>;
		backlight = <&backlight>;
	};
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-low;
	local-mac-address = [a4 51 29 00 00 06];
	status = "okay";
};

&ohci0 {
	status = "okay";
};
/*
&ohci1 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&ohci3 {
	status = "okay";
};
*/
&usb_otg {
	status = "okay";
	dr_mode = "peripheral";
};

&usbphy {
	usb0_id_det-gpios = <&pio 6 12 GPIO_ACTIVE_HIGH>; /* PG12 */
};

&pio {
	spi0_pins: spi0-pins {
    pins = "PC0", "PC1", "PC2", "PC3";
    function = "spi0";
   };
};
